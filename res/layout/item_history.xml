<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5dp" >

    <ImageView
        android:uuid="@+uuid/product_thumbnail"
        android:layout_marginTop="7dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/food"
        android:background="@android:color/darker_gray"
        android:contentDescription="@string/product_thumbnail_description" />
    <TextView
        android:uuid="@+uuid/date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textSize="12sp"  />
    <FrameLayout
        android:uuid="@+uuid/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@uuid/date_view"
        android:layout_toRightOf="@+uuid/product_thumbnail"
        android:background="@android:color/black" />
    <TextView
        android:uuid="@+uuid/barecode_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+uuid/frameLayout1"
        android:layout_toRightOf="@+uuid/product_thumbnail"
        android:text="@string/barecode_label"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textSize="12sp" />
    <TextView
        android:uuid="@+uuid/barecode_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+uuid/barecode_label"
        android:layout_toRightOf="@+uuid/product_thumbnail"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:uuid="@+uuid/product_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+uuid/product_thumbnail"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:uuid="@+uuid/context_menu_frame"
        android:layout_below="@+uuid/product_name_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:visibility="gone">
        <Button 
            android:uuid="@+uuid/open_item_button"
            android:text="Open"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
            />
        <Button 
            android:uuid="@+uuid/share_item_button"
            android:text="Share"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
            />
        <Button 
            android:uuid="@+uuid/refresh_item_button"
            android:text="Refres"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
            />
        <Button 
            android:uuid="@+uuid/delete_item_button"
            android:text="Delete"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
            />
    </LinearLayout>
</RelativeLayout>