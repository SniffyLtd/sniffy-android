<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<RelativeLayout 
	    android:uuid="@+uuid/component_rating_color"
	    android:layout_height="30dp"
	    android:layout_width="30dp"
	    android:background="@android:color/holo_orange_dark"
	    android:gravity="center_vertical"
	    android:layout_margin="5dp"></RelativeLayout>

	<TextView
	    android:uuid="@+uuid/component_name_label"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+uuid/component_rating_color"
	    android:layout_alignParentRight="true"
	    android:layout_alignTop="@+uuid/component_rating_color"
	    android:layout_toRightOf="@+uuid/component_rating_color"
	    android:gravity="center_vertical" />

</RelativeLayout>
